#include<iomanip>
#include<iostream.h>

int main()
{
  long A=100;
   long B=2001.5251;
   long C=201455.26465;
  
 cout<<hex<<left<<showbase<<nouppercase;

cout<< (long long)A <<endl;


cout << setbase(10)<<right<<('_')<<showpos
     <<fixed<<setw<<setprecision(2);


cout <<B<<endl;
cout<<scientific<<uppercase <<noshowpos<<setprecision(9);

cout<<C<<endl;



}

